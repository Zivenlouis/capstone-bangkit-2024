<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_background"
    tools:context=".view.question.detailresult.DetailResultActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_detail_phone"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/light_peach"
            app:cardCornerRadius="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_phone_images"
                    android:layout_width="173dp"
                    android:layout_height="168dp"
                    android:layout_marginTop="21dp"
                    android:src="@drawable/ic_image"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/tv_phone_names"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="52dp"
                    android:layout_marginEnd="25dp"
                    android:fontFamily="@font/clash_grotesk_regular"
                    android:text="@string/phone_names"
                    android:textAlignment="viewEnd"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_phone_images"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_phone_os"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/clash_grotesk_light"
                    android:text="@string/phone_os"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="@id/tv_phone_names"
                    app:layout_constraintTop_toBottomOf="@id/tv_phone_names" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tv_result_title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/clash_grotesk_regular"
            android:text="@string/support_text_get_ready"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/cv_detail_phone"
            app:layout_constraintTop_toBottomOf="@id/cv_detail_phone" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_table_specs"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:fillViewport="true"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_result_title2">

            <TableLayout
                android:id="@+id/table_spesifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="26dp"
                android:stretchColumns="1"
                app:layout_constraintBottom_toTopOf="@id/btn_add_wishlist"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_result_title2">

                <TableRow android:background="@drawable/table_row_border_upper">

                    <TextView
                        android:id="@+id/tv_brand"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_border"
                        android:paddingVertical="12dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="20dp"
                        android:text="@string/brand"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_brand_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_border"
                        android:padding="12dp"
                        android:text="@string/brand_label"
                        android:textColor="@color/white" />
                </TableRow>

                <TableRow android:background="@drawable/table_row_border_mid">

                    <TextView
                        android:id="@+id/tv_released_date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_border"
                        android:paddingVertical="12dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="20dp"
                        android:text="@string/released_date"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_released_date_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_border"
                        android:padding="12dp"
                        android:text="@string/release_date_label"
                        android:textColor="@color/white" />
                </TableRow>

                <TableRow android:background="@drawable/table_row_border_mid">

                    <TextView
                        android:id="@+id/tv_resolution"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_border"
                        android:paddingVertical="12dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="20dp"
                        android:text="@string/resolution"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_resolution_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_border"
                        android:padding="12dp"
                        android:text="@string/resolution_label"
                        android:textColor="@color/white" />
                </TableRow>

                <TableRow android:background="@drawable/table_row_border_mid">

                    <TextView
                        android:id="@+id/tv_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_border"
                        android:paddingVertical="12dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="20dp"
                        android:text="@string/weight"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_weight_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_border"
                        android:padding="12dp"
                        android:text="@string/weight_label"

                        android:textColor="@color/white" />
                </TableRow>

                <TableRow android:background="@drawable/table_row_border_mid">

                    <TextView
                        android:id="@+id/tv_chipset"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_border"
                        android:paddingVertical="12dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="20dp"
                        android:text="@string/chipset"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_chipset_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_border"
                        android:padding="12dp"
                        android:text="@string/chipset_label"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white" />
                </TableRow>

                <TableRow android:background="@drawable/table_row_border_mid">

                    <TextView
                        android:id="@+id/tv_memory"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_border"
                        android:padding="12dp"
                        android:text="@string/memory"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_memory_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_border"
                        android:padding="12dp"
                        android:text="@string/memory_label"
                        android:textColor="@color/white" />
                </TableRow>

                <TableRow android:background="@drawable/table_row_border_mid">

                    <TextView
                        android:id="@+id/tv_ram"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_border"
                        android:padding="12dp"
                        android:text="@string/ram"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_ram_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_border"
                        android:padding="12dp"
                        android:text="@string/ram_label"
                        android:textColor="@color/white" />
                </TableRow>

                <TableRow android:background="@drawable/table_row_border_mid">

                    <TextView
                        android:id="@+id/tv_main_camera1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_border"
                        android:paddingVertical="12dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="20dp"
                        android:text="@string/main_camera_1"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_main_camera1_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_border"
                        android:padding="12dp"
                        android:text="@string/main_camera_1_label"
                        android:textColor="@color/white" />
                </TableRow>

                <TableRow android:background="@drawable/table_row_border_mid">

                    <TextView
                        android:id="@+id/tv_main_camera2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_border"
                        android:paddingVertical="12dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="20dp"
                        android:text="@string/main_camera_2"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_main_camera2_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_border"
                        android:padding="12dp"
                        android:text="@string/main_camera_2_label"
                        android:textColor="@color/white" />
                </TableRow>

                <TableRow android:background="@drawable/table_row_border_mid">

                    <TextView
                        android:id="@+id/tv_main_camera3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_border"
                        android:paddingVertical="12dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="20dp"
                        android:text="@string/main_camera_3"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_main_camera3_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_border"
                        android:padding="12dp"
                        android:text="@string/main_camera_3_label"
                        android:textColor="@color/white" />
                </TableRow>


                <TableRow android:background="@drawable/table_row_border_mid">

                    <TextView
                        android:id="@+id/tv_selfie_camera"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_border"
                        android:paddingVertical="12dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="20dp"
                        android:text="@string/selfie_camera"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_selfie_camera_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_border"
                        android:padding="12dp"
                        android:text="@string/selfie_camera_label"
                        android:textColor="@color/white" />
                </TableRow>

                <TableRow android:background="@drawable/table_row_border_mid">

                    <TextView
                        android:id="@+id/tv_earphone_jack"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_border"
                        android:paddingVertical="12dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="20dp"
                        android:text="@string/earphone_jack"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_earphone_jack_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_border"
                        android:padding="12dp"
                        android:text="@string/earphone_jack_label"
                        android:textColor="@color/white" />
                </TableRow>


                <TableRow android:background="@drawable/table_row_border_mid">

                    <TextView
                        android:id="@+id/tv_battery"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_border"
                        android:padding="12dp"
                        android:text="@string/battery"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_battery_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_border"
                        android:padding="12dp"
                        android:text="@string/battery_label"
                        android:textColor="@color/white" />
                </TableRow>

                <TableRow android:background="@drawable/table_row_border_mid">

                    <TextView
                        android:id="@+id/tv_charging"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_border"
                        android:paddingVertical="12dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="20dp"
                        android:text="@string/charging"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_charging_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_border"
                        android:padding="12dp"
                        android:text="@string/charging_label"
                        android:textColor="@color/white" />
                </TableRow>

                <TableRow android:background="@drawable/table_row_border_mid">

                    <TextView
                        android:id="@+id/tv_colors"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_border"
                        android:padding="12dp"
                        android:text="@string/colors"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_colors_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_border"
                        android:padding="12dp"
                        android:text="@string/colors_label"
                        android:textColor="@color/white" />
                </TableRow>

                <TableRow android:background="@drawable/table_row_border_mid">

                    <TextView
                        android:id="@+id/tv_nfc"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_border"
                        android:padding="12dp"
                        android:text="@string/nfc"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_nfc_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_border"
                        android:padding="12dp"
                        android:text="@string/nfc_label"
                        android:textColor="@color/white" />
                </TableRow>

                <TableRow android:background="@drawable/table_row_border_lower">

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_border"
                        android:padding="12dp"
                        android:text="@string/price"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_price_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_border"
                        android:padding="12dp"
                        android:text="@string/price_label"
                        android:textColor="@color/white" />
                </TableRow>
            </TableLayout>

        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_wishlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:backgroundTint="@color/light_peach"
            android:fontFamily="@font/clash_grotesk_regular"
            android:text="@string/add_to_wishlist"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:cornerRadius="18dp"
            app:icon="@drawable/ic_wishlist"
            app:iconGravity="textStart"
            app:iconTint="@color/start_icon_tint"
            app:layout_constraintTop_toBottomOf="@id/scroll_table_specs" />

        <TextView
            android:id="@+id/tv_rate_phones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="29dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/clash_grotesk_regular"
            android:text="@string/phone_rates"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_add_wishlist" />

        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:id="@+id/btn_star1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="79.5dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/ic_star_border"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_star2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_rate_phones" />

        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:id="@+id/btn_star2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_star_border"
            app:layout_constraintEnd_toStartOf="@id/btn_star3"
            app:layout_constraintStart_toEndOf="@id/btn_star1"
            app:layout_constraintTop_toTopOf="@id/btn_star1" />

        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:id="@+id/btn_star3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_star_border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/btn_star1" />

        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:id="@+id/btn_star4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_star_border"
            app:layout_constraintEnd_toStartOf="@id/btn_star5"
            app:layout_constraintStart_toEndOf="@id/btn_star3"
            app:layout_constraintTop_toTopOf="@id/btn_star1" />

        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:id="@+id/btn_star5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="79.5dp"
            android:background="@drawable/ic_star_border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_star4"
            app:layout_constraintTop_toTopOf="@id/btn_star1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>