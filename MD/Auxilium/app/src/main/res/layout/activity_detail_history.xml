<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_background"
    tools:context=".view.question.ResultActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_result_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="87dp"
            android:fontFamily="@font/clash_grotesk_regular"
            android:text="&quot;Ta-da! Your Dream Phone Awaits!&quot;"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/cv_result_phone"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_result_phone"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/light_peach"
            app:cardCornerRadius="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_result_title">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_detail_phone_images"
                    android:layout_width="173dp"
                    android:layout_height="168dp"
                    android:layout_marginTop="36dp"
                    android:src="@drawable/ic_image"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_detail_phone_names"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="52dp"
                    android:layout_marginEnd="25dp"
                    android:fontFamily="@font/clash_grotesk_regular"
                    android:text="Phone Names"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_detail_phone_os"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/clash_grotesk_light"
                    android:text="Phone OS"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@id/tv_detail_phone_names"
                    app:layout_constraintTop_toBottomOf="@id/tv_detail_phone_names" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tv_result_title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/clash_grotesk_regular"
            android:text="Get ready to be dazzled! Presenting the whole shebang of information!"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/cv_result_phone"
            app:layout_constraintTop_toBottomOf="@id/cv_result_phone" />

        <TableLayout
            android:id="@+id/table_spesifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="26dp"
            android:layout_marginTop="24dp"
            android:stretchColumns="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_result_title2">

            <TableRow android:background="@drawable/table_row_border">

                <TextView
                    android:id="@+id/tv_processor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@drawable/table_border"
                    android:paddingVertical="12dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="20dp"
                    android:text="Processor"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_processor_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_border"
                    android:padding="12dp"
                    android:text="Processor Label"
                    android:textColor="@color/white" />
            </TableRow>

            <TableRow android:background="@drawable/table_row_border">

                <TextView
                    android:id="@+id/tv_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_border"
                    android:padding="12dp"
                    android:text="Display"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_display_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_border"
                    android:padding="12dp"
                    android:text="Display Label"
                    android:textColor="@color/white" />
            </TableRow>

            <TableRow android:background="@drawable/table_row_border">

                <TextView
                    android:id="@+id/tv_ram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_border"
                    android:padding="12dp"
                    android:text="RAM"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_ram_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_border"
                    android:padding="12dp"
                    android:text="RAM Label"
                    android:textColor="@color/white" />
            </TableRow>

            <TableRow android:background="@drawable/table_row_border">

                <TextView
                    android:id="@+id/tv_storage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_border"
                    android:padding="12dp"
                    android:text="Storage"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_storage_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_border"
                    android:padding="12dp"
                    android:text="Storage Label"
                    android:textColor="@color/white" />
            </TableRow>

            <TableRow android:background="@drawable/table_row_border">

                <TextView
                    android:id="@+id/tv_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_border"
                    android:padding="12dp"
                    android:text="Camera"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_camera_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_border"
                    android:padding="12dp"
                    android:text="Camera Label"
                    android:textColor="@color/white" />
            </TableRow>

            <TableRow android:background="@drawable/table_row_border">

                <TextView
                    android:id="@+id/tv_battery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_border"
                    android:padding="12dp"
                    android:text="Battery"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_battery_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_border"
                    android:padding="12dp"
                    android:text="Battery Label"
                    android:textColor="@color/white" />
            </TableRow>

            <TableRow android:background="@drawable/table_row_border">

                <TextView
                    android:id="@+id/tv_os"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_border"
                    android:padding="12dp"
                    android:text="OS"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_os_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_border"
                    android:padding="12dp"
                    android:text="OS Label"
                    android:textColor="@color/white" />
            </TableRow>

            <TableRow android:background="@drawable/table_row_border">

                <TextView
                    android:id="@+id/tv_colors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_border"
                    android:padding="12dp"
                    android:text="Colors"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_colors_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_border"
                    android:padding="12dp"
                    android:text="Colors Label"
                    android:textColor="@color/white" />
            </TableRow>

            <TableRow android:background="@drawable/table_row_border">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_border"
                    android:padding="12dp"
                    android:text="Price"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_price_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_border"
                    android:padding="12dp"
                    android:text="Price Label"
                    android:textColor="@color/white" />
            </TableRow>
        </TableLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_wishlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/light_peach"
            android:fontFamily="@font/clash_grotesk_regular"
            android:text="Add to wishlist"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:cornerRadius="18dp"
            app:icon="@drawable/ic_wishlist"
            app:iconGravity="textStart"
            app:layout_constraintTop_toBottomOf="@id/table_spesifications" />

        <TextView
            android:id="@+id/tv_result_title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:fontFamily="@font/clash_grotesk_regular"
            android:text="Also recommended for you"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/cv_result_phone"
            app:layout_constraintTop_toBottomOf="@id/btn_add_wishlist" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRecommended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_result_title3"
            tools:listitem="@layout/item_recommended" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>