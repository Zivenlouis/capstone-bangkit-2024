<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.capstoneproject.auxilium.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_forum"
        android:name="com.capstoneproject.auxilium.ui.forum.ForumFragment"
        tools:layout="@layout/fragment_forum">
        <action
            android:id="@+id/action_forumFragment_to_addPostFragment"
            app:destination="@id/addPostFragment" />
    </fragment>

    <fragment
        android:id="@+id/addPostFragment"
        android:name="com.capstoneproject.auxilium.ui.forum.AddPostFragment"
        android:label="Add Post"
        tools:layout="@layout/fragment_add_post">
        <action
            android:id="@+id/action_addPostFragment_to_forumFragment"
            app:popUpTo="@id/navigation_forum"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_wishlist"
        android:name="com.capstoneproject.auxilium.ui.wishlist.WishlistFragment"
        tools:layout="@layout/fragment_wishlist" />

</navigation>